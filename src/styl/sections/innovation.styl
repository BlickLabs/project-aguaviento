.aguaviento-section-title
  text-align center
  margin 47px auto
  position relative
  .title
    color #0d74b9
    font-size 1.79em
    margin 0
    letter-spacing .5px
  img
    width 44px
    height 44px
    position absolute
    top -10px
    z-index -1
  &.innovation
    img
      right 50px
    
.innovation
/*Parallax*/
  &-parallax-container
    width 100vw
    height 37vw
    margin-top 87px
    background url("../img/pexels-photo.jpg")
    background-attachment fixed
    background-repeat no-repeat 
    background-size cover
    background-position center top

  &-container
    /*Content*/
    position relative
    .oval
      height 160px
      width 224px
      transform rotate(180deg)
      opacity .18
      position absolute
      top -93px
      left -40px
      z-index -1

    .innovation-content
      width 600px
      margin 0 auto
      padding 50px 0 65px 0
      /*Divider*/
      .section-divider
        background-color #0d74b9
        width 100%
        height 1px
      &-info
        display flex
        justify-content center
        align-items center
        padding 45px 27px 45px 22px

        .info
          p
            width 382px
            font-size .96em
            letter-spacing .45px
            color #555555
            line-height 1.32
            margin 0
            
            
          :first-child
            margin-bottom 15px
            max-width 375px
        .innovation-content-image
          width 141px
          height 137px
          display flex
          justify-content center
          align-items center
          margin-left 50px
          img
            width 90px
            height 75px

@media only screen and (max-width 600px)
  .innovation-content
    width 320px !important
  
  .aguaviento-section-title.innovation
    width 220px
    img
      top: 4px;
      right: -10px;
  .innovation-content
    padding-bottom 30px !important
  .innovation-content-info
    flex-direction column
    text-align center
    .info
      p
        width 310px !important
  .innovation-content-image
    margin-left 0 !important
    margin-top 35px
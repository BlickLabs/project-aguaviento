.aguaviento-section-title
  &.plant
    margin 68px auto 52px auto
    img
      right 180px

.plant-carroussel
  width 100%
  height 400px
  position relative
  .slick-arrow
    border none
    background none
    position absolute
    top 180px
    width 23px
    height 41px
    background-size cover
    content none
  .slick-prev
    z-index 1
    background-image url('../img/left-arrow.png')
    left 0
  .slick-next
    z-index 1
    background-image url('../img/right-arrow.png')
    right 0
  .slick-list.draggable
    height 100%
    .slick-track
      height 100%
      .plant-slide-one, .plant-slide-two, .plant-slide-three
        width 100%
        height 100%
        background url("../img/plant-slide-one.png")
        background-size cover
        .slider-title
          position relative
          img
            width 212px
            height 190px
            position absolute
            left -3px
          .slide-title
            color #ffffff
            font-size 21px
            font-weight normal
            position absolute
            top 48px
            left 45px
@media only screen and (max-width 414px)
  .aguaviento-content.plant
    width 300px
    .aguaviento-section-title
      img
        right 35px
    
.aguaviento-section-title
  &.plant
    margin 68px auto 52px auto
    img
      right 180px

.plant-carroussel
  width 100%
  height 50vw
  position relative
  .slick-arrow
    border none
    background none
    position absolute
    top 45%
    width 23px
    height 42px
    background-size cover
    content none
  .slick-prev
    z-index 1
    background-image url('../img/left-arrow.png')
    left 0
  .slick-next
    z-index 1
    background-image url('../img/right-arrow.png')
    right 0
  .slick-list.draggable
    height 100%
    .slick-track
      height 100%
      [class*='plant-slide-']
        width 100%
        height 100%
        background-size cover
        background-position center
        .slider-title
          position relative
          img
            width 212px
            height 190px
            position absolute
            left -3px
          .slide-title
            color #ffffff
            font-size 21px
            font-weight normal
            position absolute
            top 48px
            left 45px
.plant-slide-1
  background-image url('../img/instalaciones/instalaciones-b1.jpg')

.plant-slide-2
  background-image url('../img/instalaciones/instalaciones-b2.jpg')

.plant-slide-3
  background-image url('../img/instalaciones/instalaciones-b3.jpg')

.plant-slide-4
  background-image url('../img/instalaciones/instalaciones-b4.jpg')

.plant-slide-5
  background-image url('../img/instalaciones/instalaciones-b5.jpg')

.plant-slide-6
  background-image url('../img/instalaciones/instalaciones-b6.jpg')  

.plant-slide-7
  background-image url('../img/instalaciones/instalaciones-b7.jpg')

@media only screen and (max-width 414px)
  .aguaviento-content.plant
    width 300px
    .aguaviento-section-title
      img
        right 35px
  .plant-carroussel .slider-title
    display none
    